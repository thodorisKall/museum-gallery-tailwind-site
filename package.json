{
  "devDependencies": {
    "gh-pages": "^5.0.0",
    "tailwindcss": "^3.3.2",
    "postcss-cli": "^9.0.1"
  },
  "scripts": {
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "build": "postcss input.css -o build/css/output.css",
    "watch": "postcss input.css -o build/css/output.css --watch"
  }
}
